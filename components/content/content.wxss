/* components/content.wxss */
.article{
  display: flex;
  padding: 10px 0;
}
.avatar{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 10px;
}
.img{
  border-radius: 50%;
  width:48px
}
.author{
  padding-top:6px;
  color: #27A899;
  max-width: 3.5em;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  font-size:12px;
}

.content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.contentHead{
  padding-top: 8px;
}
.title{
  font-size:18px;
  font-weight:600;
}
.dateBack{
  font-size:12px;
  padding-left:10px;
  
}
.text{
  max-width: 23em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:12px;
}